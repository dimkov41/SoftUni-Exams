<nav>
    <a class="active" href="#/">Home</a>
    {{#if loggedIn}}
        <a href="#/allListings">All Listings</a>
        <a href="#/myListings">My Listings</a>
        <a href="#/createListing">Create Listing</a>
        <div id="profile">
            <a>Welcome {{username}}</a>
            <a href="#/logout">logout</a>
        </div>
    {{/if}}
</nav>

<div class="my-listings">
    <h1>My car listings</h1>
    <div class="car-listings">

        {{#if carsExists}}
            {{#each data}}
                <div class="my-listing">
                    <p id="listing-title">{{{title}}}</p>
                    <img src="https://i.imgur.com/drIOsYl.jpg">

                    <div class="listing-props">
                        <h2>Brand: {{{brand}}}</h2>
                        <h3>Model: {{{model}}}</h3>
                        <h3>Year: {{{year}}}</h3>
                        <h3>Price: {{{price}}}$</h3>
                    </div>
                    <div class="my-listing-buttons">
                        <a href="#/details/{{_id}}" class="my-button-list">Details</a>
                        <a href="#/edit/{{_id}}" class="my-button-list">Edit</a>
                        <a href="#/delete/{{_id}}" class="my-button-list">Delete</a>
                    </div>
                </div>
            {{/each}}
        {{else}}
            <p class="no-cars"> No cars in database.</p>
        {{/if}}
    </div>
</div>

<div class="footer">
    <p>Created by MarikMayhem</p>
</div>